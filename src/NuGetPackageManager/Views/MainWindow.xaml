<catel:DataWindow x:Class="NuGetPackageManager.Views.MainWindow"
        xmlns:catel="http://schemas.catelproject.com"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <!-- right toolbar-->
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.RowSpan="2">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!-- tools -->
                        <TextBox Width="120" x:Name="SearchBox"/>
                        <Button Width="40" x:Name="RefreshBtn"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
        
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1">
            <Label Margin="6 0 6 0">Package Source:</Label>
            <ComboBox Width="100"
                      Margin="6 0 6 0"
                      Height="30"></ComboBox>
            <Button Width="80" Height="30"
                    Margin="6 0 6 0"
                    Command="{Binding RunNuget}">Settings</Button>
        </StackPanel>
        
    </Grid>
</catel:DataWindow>
